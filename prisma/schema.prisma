datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  body     String?
  price Int
  size String?
  kcal Int?
  image String?
  category  Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  categoryId String? @db.ObjectId
}

model Category {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  products Product[]
}