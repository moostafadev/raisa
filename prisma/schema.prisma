datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Product
model Product {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  body     String?
  price Int
  size String?
  kcal Int?
  image String?
  category  Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  categoryId String? @db.ObjectId
}

// Category
model Category {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  title    String
  products Product[]
}

// DeliveryService
model DeliveryService {
  id  String    @id @default(auto()) @map("_id") @db.ObjectId
  available Type @default(NO)
  price Int?
}
enum Type {
  YES
  NO
}

// Cart
model Cart {
  id String    @id @default(auto()) @map("_id") @db.ObjectId
  productId String
  qyt Int @default(1)
  email String @unique
  username String?
  phone Int? @unique
  address Address?
  condition Boolean?
}
type Address {
  city   City?
  state  String
  street String
  home String
  house Int
}
enum City {
  Riyad
  Abha
}
